{
  "name": "negentropic-geo-v1",
  "version": "0.1.0",
  "description": "Global WASM Geospatial Interface for negentropic-core",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:wasm": "cd .. && emcmake cmake -B build-wasm -DBUILD_WASM=ON && cmake --build build-wasm && cp build-wasm/negentropic_core.wasm web/public/wasm/ && cp build-wasm/negentropic_core.js web/public/wasm/",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@deck.gl/core": "^9.0.0",
    "@deck.gl/layers": "^9.0.0",
    "@deck.gl/geo-layers": "^9.0.0",
    "@deck.gl/mesh-layers": "^9.0.0",
    "@loaders.gl/core": "^4.2.0",
    "@loaders.gl/3d-tiles": "^4.2.0",
    "@xenova/transformers": "^2.17.0",
    "cesium": "^1.120.0",
    "protobufjs": "^7.2.6",
    "flatbuffers": "^24.3.25"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/offscreencanvas": "^2019.7.3",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "eslint": "^8.57.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-cesium": "^1.2.22",
    "vite-plugin-wasm": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
